#Rdist stuff
RDIST = rdist
#Find out if make was called with -n option, if yes add rdist option -v
MAKEOPTS = $(firstword $(MAKEFLAGS))
ifeq (,$(findstring =,$(MAKEOPTS)))
ifneq (,$(findstring n,$(MAKEOPTS)))
RDIST_FLAGS = -v
endif
endif
RDIST_FLAGS += -lstdout=all:file=./rdist.log=all \
  -d HOSTS_IOC="($(RDIST_HOSTS_IOC))" -d FILES_IOC="($(RDIST_ALL_IOC))" \
  -d HOSTS_OPI="($(RDIST_HOSTS_OPI))" -d FILES_OPI="($(RDIST_ALL_OPI))" \
  -d HOSTS_DOC="($(RDIST_HOSTS_DOC))" -d FILES_DOC="($(RDIST_ALL_DOC))"

#Definition of the known rdist domains (hosts and base dirs).
# RDIST_HOSTS_* can be extended, e.g. inside the top level Makefile
# or set on the command line

#IOC
RDIST_HOSTS_IOC = iocadm@vwhost
ifeq ($(USER),ctlguru)
# RDIST_DIR_IOC = /opt/IOC/.rdist
 RDIST_DIR_IOC = /opt/IOC
else
 RDIST_DIR_IOC = /opt/IOC
endif
#OPI
RDIST_HOSTS_OPI = opiadm@vwhost
ifeq ($(USER),ctlguru)
# RDIST_DIR_OPI = /opt/OPI/.rdist
 RDIST_DIR_OPI = /opt/OPI
else
 RDIST_DIR_OPI = /opt/OPI
endif
#DOC
RDIST_HOSTS_DOC = help
RDIST_DIR_DOC = /opt/apache/help/htdocs

#General note: normally everything will be installed under
# $(RDIST_DIR_<domain>)/Releases/$(RDIST_TOP)/$(RDIST_RELEASE)

#if RDIST_TOP is not defined here, will be set to the base name of your top
#directory
RDIST_TOP:=misc

#if defined, this is the release name, i.e. files will be installed
# under $(RDIST_DIR_<domain>)/Releases/$(RDIST_TOP)/$(RDIST_RELEASE),
#else files will be installed directly under $(RDIST_DIR_<domain>)/$(RDIST_TOP)
RDIST_RELEASE:=1-4
